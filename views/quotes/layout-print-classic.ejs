    <% } %>

    <div class="section-title">Princ√≠pio de funcionamento</div>
    <% if (quote.principle) { %>
    <div class="principle-text"><%= quote.principle %></div>
    <% } else { %>
    <div class="principle-text">Princ√≠pio de funcionamento n√£o especificado.</div>
    <% } %>

    <div class="page-number">3</div>
  </div>

  <!-- PAGE 4: TECHNICAL SPECIFICATIONS -->
  <div class="page">
    <h2 style="text-align: center; margin-bottom: 30px; font-size: 13pt;">Caracter√≠sticas T√©cnicas</h2>

    <%
      // Processar especifica√ß√µes t√©cnicas do campo tech_spec
      const techLines = quote.tech_spec ? quote.tech_spec.split('\n').filter(line => line.trim()) : [];
    %>

    <table class="specs-table">
      <thead>
        <tr>
          <th>Item</th>
          <th>Especifica√ß√µes</th>
        </tr>
      </thead>
      <tbody>
        <% if (techLines.length > 0) { %>
          <% techLines.forEach(line => {
            const parts = line.split(':');
            const parameter = parts[0] ? parts[0].trim() : '';
            const value = parts.slice(1).join(':').trim();
          %>
