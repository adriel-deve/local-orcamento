<%- include('partials/top') %>

<section class="card">
  <h2>Dashboard</h2>
  <p>Crie novas cotações, visualize e imprima.</p>
  <div class="actions">
    <a class="btn" href="/quotes/new">Nova Cotação</a>
  </div>
</section>

<% if (quotes && quotes.length > 0) { %>
<section class="card">
  <h3>Orçamentos Recentes</h3>
  <div class="quotes-list">
    <table style="width: 100%; border-collapse: collapse;">
      <thead>
        <tr style="background-color: #f5f5f5;">
          <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Código</th>
          <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Empresa</th>
          <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Data</th>
          <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Status</th>
          <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% quotes.forEach(function(quote) { %>
        <tr>
          <td style="padding: 10px; border: 1px solid #ddd;"><%= quote.quote_code %></td>
          <td style="padding: 10px; border: 1px solid #ddd;"><%= quote.company %></td>
          <td style="padding: 10px; border: 1px solid #ddd;"><%= new Date(quote.date).toLocaleDateString('pt-BR') %></td>
          <td style="padding: 10px; border: 1px solid #ddd;">
            <span style="padding: 4px 8px; border-radius: 4px; background-color: <%= quote.status === 'Aprovado' ? '#d4edda' : quote.status === 'Rejeitado' ? '#f8d7da' : '#fff3cd' %>; color: <%= quote.status === 'Aprovado' ? '#155724' : quote.status === 'Rejeitado' ? '#721c24' : '#856404' %>;">
              <%= quote.status %>
            </span>
          </td>
          <td style="padding: 10px; border: 1px solid #ddd;">
            <a href="/quotes/view/<%= quote.quote_code %>" style="color: #007bff; text-decoration: none; margin-right: 10px;">Ver</a>
            <a href="/quotes/pdf/<%= quote.quote_code %>" style="color: #28a745; text-decoration: none;">PDF</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>
<% } else { %>
<section class="card">
  <h3>Nenhum orçamento encontrado</h3>
  <p>Comece criando seu primeiro orçamento usando o botão "Nova Cotação" acima.</p>
</section>
<% } %>

<%- include('partials/bottom') %>
