<%- include('../partials/top', { title: 'Novo Usuário' }) %>

<header>
  <h1>Novo Usuário</h1>
</header>

<div class="card">
  <% if (error) { %>
    <div style="background: #fee; color: #c33; padding: 16px; border-radius: 8px; margin-bottom: 24px; border-left: 4px solid #c33;">
      <%= error %>
    </div>
  <% } %>

  <form method="POST" action="/users">
    <div class="field">
      <label for="username">Nome de Usuário <span style="color: #dc2626;">*</span></label>
      <input type="text" id="username" name="username" required placeholder="Digite o nome de usuário">
    </div>

    <div class="field">
      <label for="password">Senha <span style="color: #dc2626;">*</span></label>
      <input type="password" id="password" name="password" required minlength="6" placeholder="Mínimo 6 caracteres">
      <small>Mínimo 6 caracteres</small>
    </div>

    <div class="field">
      <label for="fullName">Nome Completo <span style="color: #dc2626;">*</span></label>
      <input type="text" id="fullName" name="fullName" required placeholder="Digite o nome completo">
    </div>

    <div class="field">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="exemplo@email.com">
    </div>

    <div class="field">
      <label for="role">Função <span style="color: #dc2626;">*</span></label>
      <select id="role" name="role" required>
        <option value="user">Usuário</option>
        <option value="admin">Administrador</option>
      </select>
    </div>

    <div class="actions">
      <button type="submit" class="btn primary">Criar Usuário</button>
      <a href="/users" class="btn secondary">Cancelar</a>
    </div>
  </form>
</div>

<%- include('../partials/bottom') %>
